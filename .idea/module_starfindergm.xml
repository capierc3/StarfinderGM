<?xml version="1.0" encoding="UTF-8"?>
<project name="module_starfindergm" default="compile.module.starfindergm">
  <dirname property="module.starfindergm.basedir" file="${ant.file.module_starfindergm}"/>
  
  <property name="module.jdk.home.starfindergm" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.starfindergm" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.starfindergm" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.starfindergm" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="starfindergm.output.dir" value="${module.starfindergm.basedir}/../out/production/StarfinderGM"/>
  <property name="starfindergm.testoutput.dir" value="${module.starfindergm.basedir}/../out/test/StarfinderGM"/>
  
  <path id="starfindergm.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="starfindergm.module.production.classpath">
    <path refid="${module.jdk.classpath.starfindergm}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.20.0.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.0.classpath"/>
  </path>
  
  <path id="starfindergm.runtime.production.module.classpath">
    <pathelement location="${starfindergm.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.20.0.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.0.classpath"/>
  </path>
  
  <path id="starfindergm.module.classpath">
    <path refid="${module.jdk.classpath.starfindergm}"/>
    <pathelement location="${starfindergm.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.20.0.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.0.classpath"/>
  </path>
  
  <path id="starfindergm.runtime.module.classpath">
    <pathelement location="${starfindergm.testoutput.dir}"/>
    <pathelement location="${starfindergm.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.org.xerial:sqlite-jdbc:3.20.0.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.starfindergm">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.starfindergm">
    <patternset refid="excluded.from.module.starfindergm"/>
  </patternset>
  
  <path id="starfindergm.module.sourcepath">
    <dirset dir="${module.starfindergm.basedir}/../../StarfinderGM">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.starfindergm" depends="compile.module.starfindergm.production,compile.module.starfindergm.tests" description="Compile module StarfinderGM"/>
  
  <target name="compile.module.starfindergm.production" depends="register.custom.compilers" description="Compile module StarfinderGM; production classes">
    <mkdir dir="${starfindergm.output.dir}"/>
    <javac2 destdir="${starfindergm.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.starfindergm}/javac">
      <compilerarg line="${compiler.args.starfindergm}"/>
      <bootclasspath refid="starfindergm.module.bootclasspath"/>
      <classpath refid="starfindergm.module.production.classpath"/>
      <src refid="starfindergm.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.starfindergm"/>
    </javac2>
    
    <copy todir="${starfindergm.output.dir}">
      <fileset dir="${module.starfindergm.basedir}/../src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.starfindergm.tests" depends="register.custom.compilers,compile.module.starfindergm.production" description="compile module StarfinderGM; test classes" unless="skip.tests"/>
  
  <target name="clean.module.starfindergm" description="cleanup module">
    <delete dir="${starfindergm.output.dir}"/>
    <delete dir="${starfindergm.testoutput.dir}"/>
  </target>
</project>